<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.phoenixoverlord.eventapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="face" />

    <application
            android:name="com.phoenixoverlord.eventapp.EventApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <provider
                android:name="com.phoenixoverlord.eventapp.utils.StupidAndroidFrameworkFileProvider"
                android:authorities="com.phoenixoverlord.fileprovider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths" />
        </provider>

        <activity android:name="com.phoenixoverlord.eventapp.intro.SplashActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
                  android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.phoenixoverlord.eventapp.intro.LoginActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
                  android:theme="@style/FullscreenTheme" />

        <activity android:name="com.phoenixoverlord.eventapp.intro.IntroActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
                  android:theme="@style/FullscreenTheme" />

        <activity android:name="com.phoenixoverlord.eventapp.mechanisms.filters.FilterActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
                  android:theme="@style/FullscreenTheme" />

        <activity android:name="com.phoenixoverlord.eventapp.xtra.SecondActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
                  android:theme="@style/FullscreenTheme" />

        <activity
                  android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
                  android:name="com.phoenixoverlord.eventapp.main.MainActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>

    </application>
</manifest>