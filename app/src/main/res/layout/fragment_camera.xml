<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".main.camera.CameraFragment">


    <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/chipGroup">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/photoView"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />

            <EditText
                    android:id="@+id/contentView"
                    android:layout_below="@id/photoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="8" android:layout_alignParentStart="true" android:layout_marginTop="0dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/submitButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <android.support.design.chip.Chip
                android:id="@+id/chipParty"
                android:checkable="true"
                android:text="Party"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.design.chip.Chip
                android:id="@+id/chipHaldi"
                android:checkable="true"
                android:text="Haldi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.design.chip.Chip
                android:id="@+id/chipMehendi"
                android:checkable="true"
                android:text="Mehendi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="16dp"/>

        <android.support.design.chip.Chip
                android:id="@+id/chipShaadi"
                android:checkable="true"
                android:text="Shaadi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.design.chip.Chip
                android:id="@+id/chipReception"
                android:checkable="true"
                android:text="Reception"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </android.support.design.chip.ChipGroup>
    
    <android.support.design.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Submit"
            android:id="@+id/submitButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>